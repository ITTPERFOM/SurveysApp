<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
      <layer-list>
          <item>
              <shape>
			      <solid
			          android:color="#a0db8e" />
			      <stroke
			          android:width="1dp"
			          android:color="#a0db8e" />
			      <corners
			          android:radius="6dp" />
			      <padding
			          android:left="10dp"
			          android:top="10dp"
			          android:right="10dp"
			          android:bottom="10dp" />
			    </shape>
          </item>
          <item>
              <bitmap android:gravity="left" android:src="@drawable/ico_start" />
          </item>
      </layer-list>
  </item>
  <item android:state_enabled="true">		<layer-list>
          <item>
              <shape>
			      <solid
			          android:color="#007f00" />
			      <stroke
			          android:width="1dp"
			          android:color="#007f00" />
			      <corners
			          android:radius="6dp" />
			      <padding
			          android:left="10dp"
			          android:top="10dp"
			          android:right="10dp"
			          android:bottom="10dp" />
			    </shape>
          </item>
          <item>
              <bitmap android:gravity="left" android:src="@drawable/ico_start" />
          </item>
      </layer-list>
  </item>
  <item android:state_enabled="false">
		<layer-list>
          <item>
              <shape>
			      <gradient
			          android:startColor="#9a9a9a"
			          android:endColor="#c0c0c0"
			          android:angle="270" />
			      <stroke
			          android:width="1dp"
			          android:color="#1d5e1d" />
			      <corners
			          android:radius="6dp" />
			      <padding
			          android:left="10dp"
			          android:top="10dp"
			          android:right="10dp"
			          android:bottom="10dp" />
			    </shape>
          </item>
          <item>
              <bitmap android:gravity="left" android:src="@drawable/ico_start_d" />
          </item>
      </layer-list>
  </item>
</selector>