			            android:background="#ffffff"/>
			        <EditText
			            android:id="@+id/txtCity"
			            android:layout_width="180dp"
			            android:layout_height="50dp"
			            android:background="@drawable/edittext"
			            android:padding="5dp"
			            android:ems="10"
			            android:inputType="text"
			            android:maxLength="100"/>
			    </TableRow>
			    <TableRow
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:padding="5dp"
			        android:paddingLeft="@dimen/activity_horizontal_margin"
			        android:paddingRight="@dimen/activity_horizontal_margin" >
			        <TextView
			            style="@style/textview_Text"
			            android:layout_width="120dp"
			            android:layout_height="50dp"
			            android:text="@string/ubicheck_new_field_State"
			            android:background="#ffffff"/>
			        <EditText
			            android:id="@+id/txtState"
			            android:layout_width="180dp"
			            android:layout_height="50dp"
			            android:background="@drawable/edittext"
			            android:padding="5dp"
			            android:ems="10"
			            android:inputType="text"
			            android:maxLength="100"/>
			    </TableRow>
			    <TableRow
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:padding="5dp"
			        android:paddingLeft="@dimen/activity_horizontal_margin"
			        android:paddingRight="@dimen/activity_horizontal_margin" >
			        <TextView
			            style="@style/textview_Text"
			            android:layout_width="120dp"
			            android:layout_height="50dp"
			            android:text="@string/ubicheck_new_field_ZIP"
			            android:background="#ffffff"/>
			        <EditText
			            android:id="@+id/txtZIP"
			            android:layout_width="180dp"
			            android:layout_height="50dp"
			            android:background="@drawable/edittext"
			            android:padding="5dp"
			            android:ems="10"
			            android:inputType="text"
			            android:maxLength="100"/>
			    </TableRow>
			    <TableRow
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:padding="5dp"
			        android:paddingLeft="@dimen/activity_horizontal_margin"
			        android:paddingRight="@dimen/activity_horizontal_margin" >
			        <TextView
			            style="@style/textview_Text"
			            android:layout_width="120dp"
			            android:layout_height="50dp"
			            android:text="@string/ubicheck_new_field_Country"
			            android:background="#ffffff"/>
			        <EditText
			            android:id="@+id/txtCountry"
			            android:layout_width="180dp"
			            android:layout_height="50dp"
			            android:background="@drawable/edittext"
			            android:padding="5dp"
			            android:ems="10"
			            android:inputType="text"
			            android:maxLength="100"/>
			    </TableRow>
			    <TableRow
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:padding="5dp"
			        android:paddingLeft="@dimen/activity_horizontal_margin"
			        android:paddingRight="@dimen/activity_horizontal_margin" >
			        <TextView
			            style="@style/textview_Text"
			            android:layout_width="120dp"
			            android:layout_height="50dp"
			            android:text="@string/ubicheck_new_field_Schedule"
			            android:background="#ffffff"/>
			        <EditText
			            android:id="@+id/txtSchedule"
			            android:layout_width="180dp"
			            android:layout_height="50dp"
			            android:background="@drawable/edittext"
			            android:padding="5dp"
			            android:ems="10"
			            android:inputType="text"
			            android:maxLength="100"/>
			    </TableRow>
			    <TableRow
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:padding="5dp"
			        android:paddingLeft="@dimen/activity_horizontal_margin"
			        android:paddingRight="@dimen/activity_horizontal_margin" >
			        <TextView
			            style="@style/textview_Text"
			            android:layout_width="120dp"
			            android:layout_height="50dp"
			            android:text="@string/ubicheck_new_field_Phone"
			            android:background="#ffffff"/>
			        <EditText
			            android:id="@+id/txtPhone"
			            android:layout_width="180dp"
			            android:layout_height="50dp"
			            android:background="@drawable/edittext"
			            android:padding="5dp"
			            android:ems="10"
			            android:inputType="text"
			            android:maxLength="100"/>
			    </TableRow>
			    <TableRow
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:padding="5dp"
			        android:paddingLeft="@dimen/activity_horizontal_margin"
			        android:paddingRight="@dimen/activity_horizontal_margin" >
			        <TextView
			            style="@style/textview_Text"
			            android:layout_width="120dp"
			            android:layout_height="50dp"
			            android:text="@string/ubicheck_new_field_Website"
			            android:background="#ffffff"/>
			        <EditText
			            android:id="@+id/txtWebsite"
			            android:layout_width="180dp"
			            android:layout_height="50dp"
			            android:background="@drawable/edittext"
			            android:padding="5dp"
			            android:ems="10"
			            android:inputType="text"
			            android:maxLength="100"/>
			    </TableRow>
			    <TableRow
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:padding="5dp"
			        android:paddingLeft="@dimen/activity_horizontal_margin"
			        android:paddingRight="@dimen/activity_horizontal_margin" >
			        <TextView
			            style="@style/textview_Text"
			            android:layout_width="120dp"
			            android:layout_height="50dp"
			            android:text="@string/ubicheck_new_field_Latitude"
			            android:background="#ffffff"/>
			        <EditText
			            android:id="@+id/txtLatitude"
			            android:layout_width="180dp"
			            android:layout_height="50dp"
			            android:background="@drawable/edittext"
			            android:padding="5dp"
			            android:ems="10"
			            android:inputType="text"/>
			    </TableRow>
			    <TableRow
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:padding="5dp"
			        android:paddingLeft="@dimen/activity_horizontal_margin"
			        android:paddingRight="@dimen/activity_horizontal_margin" >
			        <TextView
			            style="@style/textview_Text"
			            android:layout_width="120dp"
			            android:layout_height="50dp"
			            android:text="@string/ubicheck_new_field_Longitude"
			            android:background="#ffffff"/>
			        <EditText
			            android:id="@+id/txtLongitude"
			            android:layout_width="180dp"
			            android:layout_height="50dp"
			            android:background="@drawable/edittext"
			            android:padding="5dp"
			            android:ems="10"
			            android:inputType="text"/>
			    </TableRow>
			    <LinearLayout
			      android:layout_width="fill_parent"
			      android:layout_height="wrap_content"
			      android:gravity="center_horizontal"
			      android:orientation="vertical"
			      android:layout_marginLeft="40dp"
			      android:layout_marginStart="40dp"
			      android:layout_marginRight="40dp"
			      android:layout_marginEnd="40dp"
			      android:layout_marginBottom="30dp"
			      android:layout_marginTop="50dp">
			        <Button
			            style="@style/button_text"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:onClick="SendBranch"
			            android:background="@drawable/btn_check"
			            android:text="@string/ubicheck_new_button_save"/>
			        </LinearLayout>
			        
		    </TableLayout>
  	</ScrollView>
     <TableRow
		android:id="@+id/tr_options"
     	android:layout_width="match_parent"
     	android:layout_height="wrap_content" 
     	android:background="#00467f"
		android:layout_alignParentBottom="true" 
		android:gravity="center" >

	     <ImageButton
	         android:id="@+id/btnHome"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:onClick="SendHome"
	         android:contentDescription="@string/option_home"
	         android:layout_weight=".25"
	         android:background="@drawable/btn_tiles"
	         android:src="@drawable/tile_back" />
	 </TableRow>

</RelativeLayout>
